{
    "layer": "top",
    "position": "left",
    "margin-bottom": 0,
    "width": 56,
    "modules-left": [ "wlr/workspaces", "wlr/taskbar"],
    "modules-center": [ ],
    "modules-right": [ "custom/media", "network", "memory", "cpu", "pulseaudio", "tray", "custom/powermenu", "clock" ],
    "tray": {
        "icon-size": 16,
        "spacing": 2
    },
    "wlr/taskbar": {
        "active-only": true
    },
    "wlr/taskbar": {
        "format": "{icon}",
            //"max-length": 10,
            "icon-size": 16,
            "icon-theme": "Papirus-Dark",
            "tooltip-format": "{name}:{app_id}:{title}:{state}",
            "on-click": "minimize-raise",
            "on-click-middle": "close",
            "on-click-right": "maximize"
    },
    "network": {
            // "tooltip-format-ethernet": "{ifname} ÔÉÅ",
            "interface": "eno1",
            "tooltip-format": "{ifname} ÔÉó {bandwidthDownBits} ÔÉò {bandwidthUpBits}",
            "interval": 2,
            "on-click": "exec kitty nmtui",
            "format": "ÔÉÅ"
    },
    "temperature": {
        "format": "{icon} {temperatureC}¬∞C",
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"]
    },
    "memory": {
        "interval": 2,
        "format": "Óâ¶ {:02}%",
        "tooltip": false,
        "on-click": "exec kitty htop"
    },
    "cpu": {
        "format": "Ôãõ {usage:02}%",
        "tooltip": "false",
        "on-click": "exec kitty htop"
    },
    "custom/powermenu": {
        "format": "ÔÄë",
        "tooltip": false,
        "on-click": "exec wlogout -p layer-shell"
    },
    "custom/updates": {
        "format": "<span color=\"#61afef\">ÔÇ™</span> {}",
        "tooltip": false,
        "interval": 3600,
        "exec": "exec $HOME/.config/waybar/checkupdate.sh"
    },
    "pulseaudio": {
        "format": "{icon} {volume}",
        "format-bluetooth": "{icon}Ôäî{volume}",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol"
    },
    "clock": {
        // "format": "\uf017 {:%H:%M}",
        // "format-alt": "\uf133 {:%Y-%m-%d %H:%M}",
        "interval": 60,
        "format": "{:%m/%d\n%H:%M}",
        "tooltip": true,
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt>{calendar}</tt>"
    },
    "custom/media": {
        "format": "{icon}/{0}",
        "return-type": "json",
        // "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "on-click": "playerctl play-pause",
        "smooth-scrolling-threshold": 10,
        "on-scroll-up": "playerctl position 10+",
        "on-scroll-down": "playerctl position 10-",
        "escape": true,
        "exec": "$HOME/.config/waybar/scripts/mediaplayer2.py 2> /dev/null"
    }
}

